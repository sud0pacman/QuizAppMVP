<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".presentation.main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/cacnelBtn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_cancel"
                    app:tint="@color/secondary_background" />


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:progress="60"
                    android:progressDrawable="@drawable/custom_progress_bg" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/bg_question"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/text_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/din_regular"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="@tools:sample/avatars" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/variant_out_card_1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/bg_out_variant"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/variant1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_inner_variant"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/image_variant_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unchecked"
                        app:tint="#00c2fc" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_variant_1"
                        style="@style/variant_text"
                        android:text="@string/app_name" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/variant_out_card_2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/bg_out_variant"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/variant2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_inner_variant"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/image_variant_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unchecked"
                        app:tint="#00c2fc" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_variant_2"
                        style="@style/variant_text"
                        android:text="@string/app_name" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/variant_out_card_3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/bg_out_variant"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/variant3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_inner_variant"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/image_variant_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unchecked"
                        app:tint="#00c2fc" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_variant_3"
                        style="@style/variant_text"
                        android:text="@string/app_name" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/variant_out_card_4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/bg_out_variant"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/variant4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_inner_variant"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/image_variant_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unchecked"
                        app:tint="#00c2fc" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_variant_4"
                        style="@style/variant_text"
                        android:text="@string/app_name" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/din_next_for_duolingo_bold"
            android:textColor="@color/blue_text"
            android:layout_marginVertical="16dp"
            />
            
            
        <LinearLayout
            android:id="@+id/btn_check"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/blue_out"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_check_inner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:background="@drawable/blue_inner"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textColor="#102026"
                android:text="@string/check"
                android:fontFamily="@font/din_bold"
                android:textSize="16sp"
                android:gravity="center"
                />

        </LinearLayout>
        
    </LinearLayout>


</LinearLayout>