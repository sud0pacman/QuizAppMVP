<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agar bosh menyuga qaytsangiz, test qaytadan boshlanadi"
        android:textColor="@color/blue_text"
        android:fontFamily="@font/din_regular"
        android:textSize="18sp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/home_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="6dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="12dp"
                android:src="@drawable/ic_home"
                android:layout_marginHorizontal="12dp"
                android:contentDescription="@string/home"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/home"
                android:gravity="center|start"
                android:textColor="@color/text_color"
                android:fontFamily="@font/din_bold"
                android:textSize="18sp"
                android:paddingHorizontal="16dp"
                 />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider_background"
            />


        <LinearLayout
            android:id="@+id/continue_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="6dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="12dp"
                android:src="@drawable/ic_dumbbell"
                android:layout_marginHorizontal="12dp"
                android:contentDescription="@string/davom_etish"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/davom_etish"
                android:gravity="center|start"
                android:textColor="@color/text_color"
                android:fontFamily="@font/din_bold"
                android:textSize="18sp"
                android:paddingHorizontal="16dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>