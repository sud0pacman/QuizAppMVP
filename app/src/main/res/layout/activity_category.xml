<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".presentation.category.CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/like3"
            android:text="@string/kategoriyalar"
            android:textColor="#B433DA"
            android:textSize="42sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/buttonGeography"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c4fdfc"
                    android:gravity="center_vertical"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:padding="8dp">

                    <ImageView
                        style="@style/CategoryImageStyle"
                        android:src="@drawable/globe" />

                    <TextView
                        style="@style/CategoryTextStyle"
                        android:text="@string/geografiya"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/buttonHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c4fdfc"
                    android:gravity="center_vertical"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:padding="8dp">

                    <ImageView
                        style="@style/CategoryImageStyle"
                        android:src="@drawable/history" />

                    <TextView
                        style="@style/CategoryTextStyle"
                        android:text="@string/tarix" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/buttonProgramming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c4fdfc"
                    android:gravity="center_vertical"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:padding="8dp">

                    <ImageView
                        style="@style/CategoryImageStyle"
                        android:src="@drawable/ic_programming" />

                    <TextView
                        style="@style/CategoryTextStyle"
                        android:text="@string/programming" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/buttonPhysics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c4fdfc"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:foreground="?android:selectableItemBackgroundBorderless">

                    <ImageView
                        style="@style/CategoryImageStyle"
                        android:src="@drawable/ic_physics" />

                    <TextView
                        style="@style/CategoryTextStyle"
                        android:text="@string/fizika" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/buttonMath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c4fdfc"
                    android:gravity="center_vertical"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:padding="8dp">

                    <ImageView
                        style="@style/CategoryImageStyle"
                        android:src="@drawable/ic_mathematic" />

                    <TextView
                        style="@style/CategoryTextStyle"
                        android:text="@string/matematika" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </FrameLayout>

</LinearLayout>